<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="aditi.geography.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you know our world ?"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12pt" />

    <Button
        android:id="@+id/newGame_button"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Explore"
        android:elevation="12dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_button"
        style="@style/button_text"
        />

    <Button
        android:text="Location Quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/playgame"
        android:elevation="12dp"
        android:layout_below="@+id/newGame_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_button"
        style="@style/button_text"
    />


    <Button
        android:text="Landmarks Quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:elevation="12dp"
        android:id="@+id/monuments"
        android:layout_below="@+id/playgame"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_button"
        style="@style/button_text"
      />


    <Button
        android:id="@+id/exit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:elevation="11dp"
        android:layout_weight="1"
        android:layout_below="@+id/monuments"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_button"
        style="@style/button_text"
        />


</RelativeLayout>